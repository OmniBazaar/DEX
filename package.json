{
  "name": "omnibazaar-unified-validator-dex",
  "version": "0.1.0",
  "description": "OmniBazaar Unified Validator DEX - Blockchain + Trading + IPFS + Chat on affordable hardware",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:validator": "ts-node src/index.ts",
    "start:blockchain": "ts-node src/core/blockchain/OmniCoinBlockchain.ts",
    "start:dex": "ts-node src/core/dex/DecentralizedOrderBook.ts",
    "start:ipfs": "ts-node src/core/storage/IPFSStorageNetwork.ts",
    "start:chat": "ts-node src/core/chat/P2PChatNetwork.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "contracts:compile": "hardhat compile",
    "contracts:test": "hardhat test",
    "contracts:deploy": "hardhat run scripts/deploy.ts",
    "docker:build": "docker build -t omnibazaar/unified-validator-dex .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 omnibazaar/unified-validator-dex"
  },
  "keywords": [
    "validator",
    "dex",
    "omnicoin",
    "blockchain",
    "exchange",
    "defi",
    "trading",
    "ipfs",
    "chat",
    "p2p",
    "unified-validator"
  ],
  "author": "OmniBazaar Team",
  "license": "MIT",
  "dependencies": {
    "@coti-io/coti-contracts": "^1.0.9",
    "@coti-io/coti-ethers": "^1.0.5",
    "@coti-io/coti-sdk-typescript": "^1.0.4",
    "@openzeppelin/contracts": "^5.4.0",
    "@reduxjs/toolkit": "^2.9.0",
    "axios": "^1.5.1",
    "bcrypt": "5.1.1",
    "bignumber.js": "^9.1.2",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "ethers": "^6.8.0",
    "express": "4.21.2",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.1",
    "helmet": "8.1.0",
    "ipfs-http-client": "^60.0.1",
    "joi": "17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "redis": "^5.8.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "web3": "^4.2.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/bcrypt": "6.0.0",
    "@types/chai": "^5.2.2",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/helmet": "4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/multer": "2.0.0",
    "@types/node": "24.3.1",
    "@types/node-cron": "3.0.11",
    "@types/pg": "8.15.5",
    "@types/redis": "4.0.11",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-jsdoc": "48.11.0",
    "eslint-plugin-prettier": "^5.5.4",
    "hardhat": "^2.22.15",
    "jest": "29.7.0",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniBazaar/DEX.git"
  },
  "bugs": {
    "url": "https://github.com/OmniBazaar/DEX/issues"
  },
  "homepage": "https://github.com/OmniBazaar/DEX#readme"
}
